[pipeline:main]
pipeline = gzip fanstatic ukhvoucher

[filter:fanstatic]
use = egg:fanstatic#fanstatic
recompute_hashes = false
versioning = true
bottom = true
minified = true

[filter:gzip]
use = egg:Paste#gzip

[filter:locale]
use = egg:cromlech.i18n#locale

[app:ukhvoucher]
use = egg:ukhvoucher#app
name = ukhvoucher
zcml = ${zcml:output}
session_key = session.key
dsn = ${settings:dsn} 
root = ${buildout:directory}

[server:main]
use = egg:Paste#http
host = 0.0.0.0
port = 8080
